pipeline {
    agent { node {label 'master'}  }
    parameters {
        string(name: 'WORK_DIR', defaultValue: '', description: '')
    }
    stages {
        stage('Run Script') {
            steps {
                retry(3) {
                powershell '''
                cd $ENV:WORK_DIR\\Scripts
                .\\script.ps1'''
                }
            }
        }
    }
}